<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="museumtimetracking.gui.views.root.statistics.StatisticsViewController">
   <children>
      <BorderPane fx:id="borderpane" layoutX="14.0" layoutY="14.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
         <bottom>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
                  <HBox AnchorPane.leftAnchor="14.0">
                     <children>
                        <TextField fx:id="txtSearchBar" />
                        <ComboBox fx:id="cmbGuilds" onAction="#selectGuild" prefWidth="150.0" />
                     </children>
                  </HBox>
                  <ButtonBar prefHeight="40.0" prefWidth="200.0" AnchorPane.rightAnchor="14.0">
                     <buttons>
                        <JFXButton onAction="#handleGuild" text="Laug" />
                        <JFXButton onAction="#handleGM" text="Tovholder" />
                        <JFXButton onAction="#handleVolunteer" text="Frivillig" />
                     </buttons>
                  </ButtonBar>
               </children>
            </AnchorPane>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
