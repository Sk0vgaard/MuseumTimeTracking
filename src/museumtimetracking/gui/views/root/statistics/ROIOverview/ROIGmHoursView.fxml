<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="museumtimetracking.gui.views.root.statistics.ROIOverview.ROIGmHoursViewController">
   <center>
      <AnchorPane id="AnchorPane">
         <children>
            <PieChart fx:id="chartPie" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0" />
         </children>
      </AnchorPane>
   </center>
   <top>
      <Label text="%ROI" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold Italic" size="34.0" />
         </font>
      </Label>
   </top>
   <left>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <HBox layoutX="-14.0" layoutY="28.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0">
               <children>
                  <TextField fx:id="txtSearchBar" />
                  <ComboBox fx:id="cmbGuilds" onAction="#selectGuild" prefWidth="150.0" />
               </children>
            </HBox>
            <VBox layoutX="133.0" layoutY="79.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
               <children>
                  <Label text="%GuildOverview" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold Italic" size="28.0" />
                     </font>
                  </Label>
                  <HBox>
                     <children>
                        <Label prefWidth="90.0" text="Uge: ">
                           <font>
                              <Font name="System Bold Italic" size="15.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblWeek" text="">
                           <font>
                              <Font name="System Italic" size="15.0" />
                           </font></Label>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Label prefWidth="90.0" text="%Month">
                           <font>
                              <Font name="System Bold Italic" size="15.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblMonth" text="">
                           <font>
                              <Font name="System Italic" size="15.0" />
                           </font></Label>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Label prefWidth="90.0" text="%Year">
                           <font>
                              <Font name="System Bold Italic" size="15.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblYear" text="">
                           <font>
                              <Font name="System Italic" size="15.0" />
                           </font></Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </left>
   <right>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tableROI" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="0.0">
              <columns>
                <TableColumn fx:id="clmName" prefWidth="75.0" text="C1" />
                <TableColumn fx:id="clmWeek" prefWidth="75.0" text="C2" />
                  <TableColumn fx:id="clmMonth" prefWidth="75.0" text="C2" />
                  <TableColumn fx:id="clmYear" prefWidth="75.0" text="C2" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <padding>
                  <Insets bottom="14.0" right="14.0" />
               </padding>
            </TableView>
         </children>
      </AnchorPane>
   </right>
</BorderPane>
